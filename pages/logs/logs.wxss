.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.content {
  background-color: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  margin-bottom: 40rpx;
}

.content text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin: 20rpx 0;
}

.back-btn {
  background-color: #1aad19;
  color: white;
  border-radius: 10rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
}