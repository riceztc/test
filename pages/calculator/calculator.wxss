/* 计算器样式 */
page {
  background-color: #f5f5f5;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  max-width: 750rpx;
  margin: 0 auto;  
}

.container {
  padding: 0;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100%; 
  max-width: 750rpx;
  margin: 0 auto; 
}

.calculator {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 25rpx 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  max-width: 100%;
  overflow: hidden;
}

.display {
  background: rgba(0, 0, 0, 0.7);
  border-radius: 0;
  padding: 30rpx 25rpx;
  margin-bottom: 20rpx;
  text-align: right;
  backdrop-filter: blur(8px);
  min-height: 100rpx;
  flex-shrink: 0;
}

.expression {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  margin-bottom: 10rpx;
  min-height: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.result {
  color: white;
  font-size: 42rpx;
  font-weight: bold;
  min-height: 50rpx;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.2;
}

.buttons {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  padding: 10px;
  box-sizing: border-box;
  min-height: 0;
} 

.row {
  display: flex;
  gap: 8rpx;
  flex: 1;
  min-height: 0;
}

.btn {
  flex: 1;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  min-height: 70rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.number {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
}

.number:active {
  background: rgba(255, 255, 255, 1);
}

.operator {
  background: #ff9500;
  color: white;
}

.operator:active {
  background: #e6850e;
}

.function {
  background: rgba(255, 255, 255, 0.6);
  color: #333;
}

.function:active {
  background: rgba(255, 255, 255, 0.8);
}

.equals {
  background: #4CAF50;
  color: white;
}

.equals:active {
  background: #45a049;
}

.wide {
  flex: 2;
}

/* 历史记录 */
.history {
  background: white;
  padding: 20rpx 25rpx;
  box-shadow: 0 -5rpx 20rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
  max-height: 40vh;
  overflow-y: auto;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.history-header text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.clear-history {
  background: #ff4444;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
}

.clear-history:active {
  background: #cc0000;
}

.history-list {
  max-height: 100%;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-expr {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.history-result {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 响应式设计 */
/* 小屏幕适配 */
@media (max-width: 750rpx) {
  .display {
    padding: 25rpx 20rpx;
    min-height: 90rpx;
  }
  
  .expression {
    font-size: 22rpx;
  }
  
  .result {
    font-size: 36rpx;
  }
  
  .btn {
    min-height: 65rpx;
    font-size: 28rpx;
  }
  
  .history {
    padding: 15rpx 20rpx;
    max-height: 35vh;
  }
}

/* 超小屏幕适配 */
@media (max-width: 600rpx) {
  .btn {
    min-height: 55rpx;
    font-size: 24rpx;
  }
  
  .result {
    font-size: 32rpx;
  }
  
  .expression {
    font-size: 20rpx;
  }
  
  .display {
    padding: 20rpx 15rpx;
    min-height: 80rpx;
  }
  
  .history {
    padding: 10rpx 15rpx;
    max-height: 30vh;
  }
}