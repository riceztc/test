/**list.wxss**/
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  background-color: #1aad19;
  color: white;
  font-size: 40rpx;
  padding: 0;
}

.filter-section {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.picker {
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  text-align: center;
}

.list-container {
  padding: 0 20rpx;
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.bill-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.bill-title {
  font-size: 32rpx;
  font-weight: bold;
}

.bill-date {
  font-size: 24rpx;
  color: #999;
}

.bill-type {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.bill-right {
  text-align: right;
}

.bill-amount {
  font-size: 36rpx;
  font-weight: bold;
}

.expense {
  color: #e64340;
}

.income {
  color: #09bb07;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty .btn {
  margin-top: 40rpx;
  display: inline-block;
}