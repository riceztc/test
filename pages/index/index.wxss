/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin-bottom: 40rpx;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  padding: 30rpx 60rpx;
  margin: 20rpx;
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.login-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.login-text {
  font-size: 28rpx;
  font-weight: 500;
}

.manual-input-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.nickname-input {
  width: 400rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.confirm-btn {
  width: 200rpx;
  padding: 15rpx;
  background-color: #1aad19;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.manual-option {
  margin-top: 30rpx;
}

.manual-text {
  font-size: 24rpx;
  color: #666;
  text-decoration: underline;
}

.avatar-container {
  position: relative;
  display: inline-block;
  margin: 20rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  background-color: #f5f5f5;
}

.default-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s ease;
}





.avatar-text {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  background-color: #f5f5f5;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-top: 10rpx;
  text-align: center;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-top: 10rpx;
}

.usermotto {
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.user-motto {
  font-size: 36rpx;
  color: #666;
  font-weight: 300;
}

.action-section {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  background-color: #1aad19;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}

.quick-stats {
  margin-top: 50rpx;
  padding: 30rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  text-align: center;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  margin: 20rpx 0;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
}

.stats-value.income {
  color: #09bb07;
}

.stats-value.expense {
  color: #e64340;
}

.net-income {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.stats-value.positive {
  color: #09bb07;
}

.stats-value.negative {
  color: #e64340;
}

.stats-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.update-time {
  font-size: 20rpx;
  color: #999;
}

.refresh-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #007aff;
  color: white;
  border-radius: 20rpx;
  line-height: 1.5;
}