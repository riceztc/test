/**detail.wxss**/
.container {
  padding: 0;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.header {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.form-item {
  margin: 30rpx 20rpx;
  width: calc(100% - 40rpx);
  max-width: 100%;
  display: flex;
  flex-direction: column;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  max-width: 100%;
  padding: 30rpx 25rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  min-height: 80rpx;
  line-height: 1.4;
  flex: 1;
  display: block;
}

/* 确保标题输入框特别宽 */
input[name="title"],
input[placeholder*="标题"] {
  width: 100% !important;
  max-width: 100% !important;
  padding-left: 20rpx !important;
  padding-right: 20rpx !important;
}

/* 确保金额输入框也有足够宽度 */
input[name="amount"],
input[type="digit"],
input[placeholder*="金额"] {
  width: 100% !important;
  max-width: 100% !important;
  padding-left: 20rpx !important;
  padding-right: 20rpx !important;
  text-align: left !important;
}

.textarea {
  width: 100%;
  padding: 25rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  min-height: 150rpx;
  background-color: #fff;
  line-height: 1.5;
}

.radio-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 28rpx;
}

.radio-item radio {
  margin-right: 10rpx;
}

.button-group {
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.submit-btn {
  background-color: #1aad19;
  color: white;
}

.delete-btn {
  background-color: #e64340;
  color: white;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #333;
}

.btn {
  padding: 25rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}