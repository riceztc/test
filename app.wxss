/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.btn {
  margin: 20rpx;
  padding: 20rpx 40rpx;
  background-color: #1aad19;
  color: white;
  border-radius: 10rpx;
  text-align: center;
}

.btn-hover {
  background-color: #179b16;
}

.input {
  border: 1px solid #ddd;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.card {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}